<?xml version="1.0" encoding="utf8"?>
<presentation>

	<setup>
		<slideWidth>400</slideWidth>
		<slideHeight>200</slideHeight>
		<advancePresentation>
			<timing><enabled>false</enabled></timing>
			<manual><click>true</click></manual>
		</advancePresentation>
		<debug>
			<showTitles>true</showTitles>
		</debug>
	</setup>
	
	<slides>
		
		<slide>
			<title>Red Slide, click to go to next</title>
			<background>
				<bgType>solid</bgType>
				<color>0xFF0000</color>
			</background>
		</slide>
		
		<slide>
			<title>Blue Slide, click to go back to first</title>
			<background>
				<bgType>solid</bgType>
				<color>0x0000FF</color>
			</background>
		</slide>
		
	</slides>
	
</presentation>
