<?xml version="1.0" encoding="utf8"?>
<presentation>

	<setup>
		<slideWidth>400</slideWidth>
		<slideHeight>200</slideHeight>
		<advancePresentation>
			<timing>false</timing>
			<manual><click>false</click></manual>
		</advancePresentation>
		<debug>
			<showTitles>true</showTitles>
		</debug>
	</setup>
	
	<slides>
		
		<slide>
			<title>Red Slide, always visible, click and timing disabled</title>
			<background>
				<bgType>solid</bgType>
				<color>0xFF0000</color>
			</background>
		</slide>
		
		<slide>
			<title>Blue Slide is never visible because there is no advance action enabled</title>
			<background>
				<bgType>solid</bgType>
				<color>0x0000FF</color>
			</background>
		</slide>
		
	</slides>
	
</presentation>
