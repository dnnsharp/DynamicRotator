<?xml version="1.0" encoding="utf8"?>
<presentation>

	<setup>
		<slideWidth>400</slideWidth>
		<slideHeight>200</slideHeight>
		<advancePresentation>
			<timing>
				<enabled>true</enabled>
				<autostart>true</autostart>
				<defaultTiming>2000</defaultTiming>
			</timing>
		</advancePresentation>
		<debug>
			<showTitles>true</showTitles>
		</debug>
	</setup>
	
	<slides>
		
		<slide>
			<title>Red Slide, next in 2 seconds</title>
			<background>
				<bgType>solid</bgType>
				<color>0xFF0000</color>
			</background>
		</slide>
		
		<slide>
			<title>Blue Slide, next in 2 seconds</title>
			<background>
				<bgType>solid</bgType>
				<color>0x0000FF</color>
			</background>
		</slide>
		
	</slides>
	
</presentation>
