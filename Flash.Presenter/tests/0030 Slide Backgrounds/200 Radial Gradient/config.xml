<?xml version="1.0" encoding="utf8"?>
<presentation>

	<setup>
		<slideWidth>400</slideWidth>
		<slideHeight>200</slideHeight>
		<advancePresentation>
			<timing><enabled>false</enabled></timing>
			<manual><click>true</click></manual>
		</advancePresentation>
		<debug>
			<showTitles>true</showTitles>
		</debug>
	</setup>
	
	<slides>
		
		<slide>
			<title>2 Key Points: Green to Blue</title>
			<background>
				<bgType>gradient</bgType>
				<style>radial</style>
				<keyPoints>
					<point>
						<color>0x00ee00</color>
					</point>
					<point>
						<color>0x0000ee</color>
					</point>
				</keyPoints>
			</background>
		</slide>
		
		<slide>
			<title>3 Key Points: Green to Blue to Red</title>
			<background>
				<bgType>gradient</bgType>
				<style>radial</style>
				<keyPoints>
					<point>
						<at>0</at>
						<color>0x00ee00</color>
					</point>
					<point>
						<at>0.5</at>
						<color>0x0000ee</color>
					</point>
					<point>
						<at>1</at>
						<color>0xee0000</color>
					</point>
				</keyPoints>
			</background>
		</slide>
		
		<slide>
			<title>...focal point moved on trigonometric circle to x=-0.5...</title>
			<background>
				<bgType>gradient</bgType>
				<focalPointPosX>-0.5</focalPointPosX>
				<style>radial</style>
				<keyPoints>
					<point>
						<at>0</at>
						<color>0x00ee00</color>
					</point>
					<point>
						<at>0.5</at>
						<color>0x0000ee</color>
					</point>
					<point>
						<at>1</at>
						<color>0xee0000</color>
					</point>
				</keyPoints>
			</background>
		</slide>
		
		<slide>
			<title>...rotation set to 30 degrees...</title>
			<background>
				<bgType>gradient</bgType>
				<rotation>30</rotation>
				<focalPointPosX>-0.8</focalPointPosX>
				<style>radial</style>
				<translation>
					<x>50</x>
					<y>20</y>
				</translation>
				<keyPoints>
					<point>
						<at>0</at>
						<color>0x00ee00</color>
					</point>
					<point>
						<at>0.5</at>
						<color>0x0000ee</color>
					</point>
					<point>
						<at>1</at>
						<color>0xee0000</color>
					</point>
				</keyPoints>
			</background>
		</slide>
		
		<slide>
			<title>...gradient translated by 50,20...</title>
			<background>
				<bgType>gradient</bgType>
				<style>radial</style>
				<focalPointPosX>-0.8</focalPointPosX>
				<rotation>30</rotation>
				<translation>
					<x>50</x>
					<y>20</y>
				</translation>
				<keyPoints>
					<point>
						<at>0</at>
						<color>0x00ee00</color>
						<alpha>0.4</alpha>
					</point>
					<point>
						<at>0.5</at>
						<color>0x0000ee</color>
						<alpha>0.6</alpha>
					</point>
					<point>
						<at>1</at>
						<color>0xee0000</color>
						<alpha>0.8</alpha>
					</point>
				</keyPoints>
			</background>
		</slide>
		
		<slide>
			<title>...scale set to 25%.</title>
			<background>
				<bgType>gradient</bgType>
				<style>radial</style>
				<focalPointPosX>-0.8</focalPointPosX>
				<rotation>30</rotation>
				<translation>
					<x>50</x>
					<y>20</y>
				</translation>
				<scale>
					<x>0.25</x>
					<y>0.25</y>
				</scale>
				<keyPoints>
					<point>
						<at>0</at>
						<color>0x00ee00</color>
						<alpha>0.4</alpha>
					</point>
					<point>
						<at>0.5</at>
						<color>0x0000ee</color>
						<alpha>0.6</alpha>
					</point>
					<point>
						<at>1</at>
						<color>0xee0000</color>
						<alpha>0.8</alpha>
					</point>
				</keyPoints>
			</background>
		</slide>
		
	</slides>
	
</presentation>
