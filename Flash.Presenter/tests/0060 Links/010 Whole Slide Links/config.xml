<?xml version="1.0" encoding="utf8"?>
<presentation>

	<setup>
		<slideWidth>400</slideWidth>
		<slideHeight>200</slideHeight>
		
		<advancePresentation>
			<timing>
				<enabled>true</enabled>
				<defaultTiming>5000</defaultTiming>
			</timing>
			<manual><click>true</click></manual>
		</advancePresentation>
		<debug>
			<showTitles>true</showTitles>
		</debug>
	</setup>
	
	<slides>
		
		<slide>
			<title>Click to open test-page1.html in same window</title>
			<background>
				<bgType>solid</bgType>
				<color>0xF8F091</color>
			</background>
			<link>test-page1.html</link>
		</slide>
		
		<slide>
			<title>Click to open test-page2.html in new window</title>
			<background>
				<bgType>solid</bgType>
				<color>0xCFE7FB</color>
			</background>
			<link>
				<url>test-page2.html</url>
				<target>_blank</target>
			</link>
		</slide>
	</slides>
</presentation>
